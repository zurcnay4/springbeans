<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  <bean id="triangle" class="xyz.nay4.spring.springbeans.Triangle" autowire="byName">
  </bean>
  
  <bean id="pointA" class="xyz.nay4.spring.springbeans.Point">
    <property name="x" value="0" />
    <property name="y" value="0" />
  </bean>
  
  <bean id="pointB" class="xyz.nay4.spring.springbeans.Point">
    <property name="x" value="0" />
    <property name="y" value="-20" />
  </bean>
  
  <bean id="pointC" class="xyz.nay4.spring.springbeans.Point">
    <property name="x" value="20" />
    <property name="y" value="0" />
  </bean>
</beans>